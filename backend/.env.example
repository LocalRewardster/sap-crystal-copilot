# Application Settings
DEBUG=true
SECRET_KEY=your-secret-key-here-minimum-32-characters-long
LOG_LEVEL=INFO

# API Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001"]
ALLOWED_HOSTS=["localhost","127.0.0.1","*"]

# File Upload
MAX_FILE_SIZE=26214400  # 25MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=[".rpt"]

# AI/LLM Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM Models
PRIMARY_MODEL=openai/gpt-4o
FALLBACK_MODEL=anthropic/claude-3-haiku
LARGE_CONTEXT_MODEL=mistral/mistral-large

# Database - Choose one:
# SQLite (for local development)
# DATABASE_URL=sqlite:///./crystal_copilot.db
# Supabase (recommended for production)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Crystal Reports Processing
RPTTOXML_PATH=./bin/RptToXml.exe
CRYSTAL_SDK_PATH=C:/Program Files/SAP BusinessObjects/Crystal Reports for .NET Framework 4.0/Common/SAP BusinessObjects Enterprise XI 4.0/win64_x64/

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Monitoring
ENABLE_METRICS=true